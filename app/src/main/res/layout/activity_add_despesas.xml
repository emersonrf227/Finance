<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#38c172"
        tools:context=".ui.addDespesas.addDespesasActivity">

    <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:background="#38c172"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/toolbar" android:padding="0dp"
            android:elevation="7dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp">


        <Button
                android:text="VOLTAR"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:textColor="#FFF"
                android:id="@+id/btPreDespsesa"
                app:layout_constraintTop_toTopOf="@+id/toolbar"
                app:layout_constraintStart_toStartOf="@+id/toolbar" android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/toolbar"/>


    </android.support.v7.widget.Toolbar>
    <TextView
            android:text="Adicionar despesas"
            android:textColor="#FFF"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/textView3"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Incluir"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:id="@+id/btAddDespesa"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/lbValorDespesa" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <EditText
            android:layout_width="274dp"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:background="#fff"
            android:ems="10"
            android:id="@+id/lbDescDespesa"
            android:hint="Descreva a Despesa"
            app:layout_constraintEnd_toEndOf="@+id/textView3" app:layout_constraintStart_toStartOf="@+id/textView3"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/textView3"/>
    <EditText
            android:layout_width="263dp"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:background="#fff"
            android:ems="10"
            android:id="@+id/lbValorDespesa"
            android:hint="Digite o valor"
            app:layout_constraintEnd_toEndOf="@+id/lbDescDespesa"
            app:layout_constraintStart_toStartOf="@+id/lbDescDespesa" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/lbDescDespesa"/>


</android.support.constraint.ConstraintLayout>