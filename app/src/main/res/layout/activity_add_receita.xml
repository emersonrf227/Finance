<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#38c172"
        tools:context=".ui.addReceita.addReceitaActivity" android:id="@+id/lbDespesas">


    <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:background="#38c172"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/toolbar" android:padding="0dp"
            android:elevation="7dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp">


        <Button
                android:text="VOLTAR"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:textColor="#FFF"
                android:id="@+id/btPreReceita"
                app:layout_constraintTop_toTopOf="@+id/toolbar"
                app:layout_constraintStart_toStartOf="@+id/toolbar" android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/toolbar"/>


    </android.support.v7.widget.Toolbar>
    <TextView
            android:text="Adicionar receita"
            android:textColor="#FFF"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/textView3" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" app:layout_constraintStart_toStartOf="@+id/toolbar"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <Button
            android:text="Incluir"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:id="@+id/Adicionar" app:layout_constraintEnd_toEndOf="@+id/lbDespesas"
            app:layout_constraintStart_toStartOf="@+id/lbDespesas" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/lbDespesas"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="#fff"
            android:ems="10"
            android:inputType="numberDecimal"
            android:id="@+id/lbDespesas"
            app:layout_constraintEnd_toEndOf="@+id/textView3" app:layout_constraintStart_toStartOf="@+id/textView3"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/textView3"
            android:hint="Digite o valor"/>


</android.support.constraint.ConstraintLayout>